@model List<Shoponline1.Models.News>

@for (int item = 0; item < 4; item++)
{

    <article class="entry">
        <figure class="entry-media">
            <a href="single.html">
                <img src="~/Assets/fontend/images/demos/demo-22/post/@Model[item].img" alt="image desc">
            </a>
        </figure><!-- End .entry-media -->

        <div class="entry-body text-center">
            <div class="entry-meta">
                <a href="#">@Model[item].datebegin</a>, 0 Comments
            </div><!-- End .entry-meta -->

            <h3 class="entry-title">
                <a href="@ViewBag.meta/@Model[item].meta">@Model[item].name.</a>
            </h3><!-- End .entry-title -->

            <div class="entry-content">
                <a href="single.html" class="read-more">Continue Reading</a>
            </div><!-- End .entry-content -->
        </div><!-- End .entry-body -->
    </article><!-- End .entry -->

}
